@model PeopleSearch.ViewModels.PersonEditViewModel

@{ 
    ViewBag.Title = "Add a person";
}

<div>
    <form method="post" asp-antiforgery="true">
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Interests"></label>
            <input asp-for="Interests" />
        </div>
        <div>
            <label asp-for="Birth"></label>
            <input asp-for="Birth" />
            <span asp-validation-for="Birth"></span>
        </div>
        <div>
            <input type="submit" value="Save" />
        </div>
    </form>
</div>